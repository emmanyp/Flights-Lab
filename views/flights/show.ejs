<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css">
  <%- include('../partials/nav') %>

    <main>
      <h1> <%= title %></h1>
      <section>
        <div>Airline: </div>
        <div> <%= flight.airline%></div>
        <div>Airport:</div>
        <div><%= flight.airport %> </div>
        <div>Flight #: </div>
        <div><%= flight.flightNo%></div>
        <div>Departs: </div>
        <div><%= flight.departs %></div>
        <div>Destination(s):</div>
        <div>
          <%- flight.destinations.map(f=> `${f.airport}`).join(',') %>
        </div>
      
          </section>
            <form id="add-destination-to-flight" action="/flights/<%=flight._id%>/destinations" method="POST">
              <select name="destinationId">
                <%- destinations.map(f=> `<option value="${f._id}">${f.airport}</option>`).join('') %>
              </select>
              <button type="submit">Add Destination</button>
            </form>

      <h2>Tickets</h2>
      <div>
        <form
          action="/flights/<%= flight._id %>/tickets" 
          method="POST"
          >
          <label>Seat:</label>
          <input name="seat" required pattern="[A-F][1-9]\d?">
          <br>
          <label>Price:</label>
          <input type="number" name="price">
          <br>
          <button type="submit">Save Ticket</button>
        </form>
      </div>
      <% if (flight.tickets.length) { %>
        <table>
          <thead>
            <tr>
              <th>Seat</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <% flight.tickets.forEach(function(ticket){ %>
              <tr>
                <td><i class="fas fa-chair"></i> <%= ticket.seat %> </td>
                <td>$<%= ticket.price %> </td>
                <td><form action="/flights/<%= flight._id %>/tickets/<%= ticket._id %>?_method=DELETE" method="POST">
                  <button>DELETE</button>
                </form></td>
              </tr>
              <% }) %> 
          </tbody>
          </table>
        <% } else { %>
          <h3>No Ticket Yet</h3>
          <% } %>

          
    </main>
    <%- include('../partials/footer') %>