<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/performers/new.css" />
  <%- include('../partials/nav') %>

    <main>
      <h1>
        <%= title %>
      </h1>
      <p>Please first ensure that the Destination is not in the dropdown
      </p>
      <select>
        <% destinations.forEach(function(destination) { %>
          <option>
            <%= destination.airport %>
          </option>
          <% }) %>
      </select>
      <form id="add-destination-form" action="/destinations" method="POST">
            <label for="name-input">Destination:</label>
            <input type="text" name="airport" id="name-input">
            <button type="submit">Submit</button>
      </form>
    </main>

    <%- include('../partials/footer') %>